<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Product</title>
    <link rel="stylesheet" href="styles/style.css">
</head>
<body>
    <header>
        <h1>Dibya Dahal Product Task</h1>
        <a href="/all">Get all products</a>
        <a href="/getProduct">Get one Product</a>
        <a href="/inputform">Add a new Product</a>
        <a href="/updateform">Update Product Data</a>
        <a href="/removeproduct">Remove Product Data</a>
     </header>
    <main>
        <h2>All employees</h2>
       <div class="container">
        <table >
            <thead>
                <tr>
                    <th>Product ID</th>
                    <th>Name</th>
                    <th>Model</th>
                    <th>Type</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                <% result.forEach(product => { %>
                    <tr>
                        <td><%= product.id %></td>
                        <td><%= product.name %></td>
                        <td><%= product.model %></td>
                        <td><%= product.type %></td>
                        <td><%= product.amount %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
     </div>
    </main>
</body>
</html>